<?xml version="1.0"?>
<schema version="0.3">
	<table name="btBloggaPostsList">
            <field name="bID" type="I">
                <key />
                <unsigned />
            </field>

            <field name="num_posts_to_show" type="I">
                <unsigned />
            </field>

            <field name="characters_to_display" type="I">
                <unsigned />
            </field>

            <field name="paginate" type="I1">
                <unsigned />
                <notnull />
                <default value="0" />
            </field>

            <field name="show_thumbs" type="I1">
                <unsigned />
                <notnull />
                <default value="1" />
            </field>

            <field name="max_thumb_width" type="I">
                <unsigned />
            </field>

            <field name="order_by" type="C" size="32">
            </field>

            <field name="show_rss" type="I1">
                <default value="0"/>
            </field>

            <field name="rss_title" type="C" size="255">
            </field>
            
            <field name="rss_description" type="X2">
            </field>

            <field name="show_posts_from" type="I">
                <unsigned />
                <default value="0" />
            </field>

	</table>
</schema>